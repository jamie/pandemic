%table
  - @grid.each_with_index do |row, y|
    %tr
      - row.each_with_index do |city, x|
        - if city.blank?
          %td &nbsp;
        - else
          %td{class: "city #{city.color}"}
            = link_to city.name, "/games/42/actions?city=#{city.id}", method: :post
            - @players.select{|player| player.x == x && player.y == y}.each do |player|
              %br
              = player.role.name
